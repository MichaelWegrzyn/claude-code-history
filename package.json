{
  "name": "claude-code-history-viewer",
  "version": "0.1.0",
  "description": "Browse, search, and manage your Claude Code conversation history",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "node scripts/build-main.js && concurrently \"vite\" \"electron . --dev\" -k",
    "build:main": "node scripts/build-main.js",
    "build": "pnpm build:main && vite build && electron-builder build --config electron-builder.config.cjs",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest",
    "test:e2e": "playwright test",
    "electron": "electron .",
    "electron:dev": "electron . --dev",
    "package": "electron-builder build --config electron-builder.config.cjs",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/michaelwegrzyn/claude-code-history-viewer"
  },
  "keywords": [
    "claude-code",
    "history",
    "viewer",
    "electron",
    "react",
    "typescript"
  ],
  "author": "Michael Wegrzyn",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^24.0.7",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.5",
    "eslint": "^9.30.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "playwright": "^1.53.1",
    "postcss": "^8.5.6",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.1.11",
    "to-ico": "^1.1.5",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tanstack/react-query": "^5.81.5",
    "chokidar": "^4.0.3",
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-window": "^1.8.11",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.6"
  }
}
